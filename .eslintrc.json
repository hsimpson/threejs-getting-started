{
  "env": {
    "browser": true,
    "es6": true,
    "es2020": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "eqeqeq": "error",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": ["error", "unix"],
    "no-unused-vars": "off",
    "no-warning-comments": "warn",
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
